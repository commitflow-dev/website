---
// Hero Section with Terminal Demo
import TerminalDemo from "./TerminalDemo.astro";
import { Button } from "./ui/button";

const commitflowCommands = [
    {
        type: "input" as const,
        content: 'commitflow --since "90 days ago" > stats.json',
        typing: true,
        speed: 60,
    },
    {
        type: "output" as const,
        content:
            "✓ Generated stats.json (45.2KB)\n✓ Processed 1,234 commits from 8 contributors",
        delay: 1000,
    },
    {
        type: "input" as const,
        content: "export OPENAI_API_KEY=sk-xxx",
        typing: true,
        speed: 60,
    },
    {
        type: "output" as const,
        content: "✓ API key configured for AI changelog generation",
        delay: 300,
    },
    {
        type: "input" as const,
        content: "commitflow changelog",
        typing: true,
        speed: 60,
    },
    {
        type: "output" as const,
        content:
            "✓ Generated changelog.json\n✓ Processed 12 weeks of commits\n✓ AI-powered summaries ready",
        delay: 1500,
    },
    {
        type: "input" as const,
        content: "commitflow ui",
        typing: true,
        speed: 60,
    },
    {
        type: "output" as const,
        content: "✓ Launching browser...\n✓ Opening http://localhost:3008",
        delay: 800,
    },
];
---

<section class="bg-background py-24 lg:py-40">
    <div class="container max-w-6xl mx-auto px-6">
        <div class="text-center mb-20">
            <h1
                class="text-5xl lg:text-7xl font-bold text-foreground mb-8 leading-tight"
            >
                Beautiful Analytics from
                <span class="text-primary">Your Git Data</span>
            </h1>
            <p
                class="text-xl lg:text-2xl text-muted-foreground max-w-2xl mx-auto mb-12"
            >
                Transform commits into stunning insights and professional
                changelogs
            </p>

            <!-- Install Command with Copy Button -->
            <div class="max-w-2xl mx-auto">
                <div class="relative group">
                    <pre
                        class="bg-accent-foreground text-muted border border-border rounded-lg px-6 py-4 text-left font-mono text-sm overflow-x-auto"><code>npm install commitflow</code></pre>
                    <button
                        id="copy-command-btn"
                        class="absolute right-3 top-1/2 -translate-y-1/2 bg-primary text-primary-foreground hover:bg-primary/90 px-4 py-2 rounded-md text-sm font-medium transition-all opacity-90 hover:opacity-100 flex items-center gap-2"
                        title="Copy to clipboard"
                    >
                        <svg
                            id="copy-icon"
                            class="w-4 h-4"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"
                            ></path>
                        </svg>
                        <span id="copy-text">Copy</span>
                    </button>
                </div>
            </div>
        </div>

        <!-- Terminal Demo -->
        <div class="max-w-5xl mx-auto">
            <TerminalDemo
                commands={commitflowCommands}
                autoPlay={true}
                showControls={false}
                class="mx-auto shadow-xl"
            />
        </div>
    </div>
</section>

<script>
    // Copy command functionality
    const copyBtn = document.getElementById("copy-command-btn");
    const copyText = document.getElementById("copy-text");
    const copyIcon = document.getElementById("copy-icon");

    copyBtn?.addEventListener("click", async () => {
        const command = "npm install commitflow";
        try {
            await navigator.clipboard.writeText(command);

            // Update button to show success state
            if (copyText && copyIcon) {
                copyText.textContent = "Copied!";
                copyIcon.innerHTML = `
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M5 13l4 4L19 7"
                    />
                `;
            }

            // Reset after 2 seconds
            setTimeout(() => {
                if (copyText && copyIcon) {
                    copyText.textContent = "Copy";
                    copyIcon.innerHTML = `
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"
                        />
                    `;
                }
            }, 2000);
        } catch (err) {
            console.error("Failed to copy:", err);
            if (copyText) {
                copyText.textContent = "Failed";
            }
        }
    });
</script>
